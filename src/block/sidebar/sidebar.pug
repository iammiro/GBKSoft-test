mixin b-sidebar()
    +b('div')#sidebar-wrapper.hidden
        +b('aside').sidebar
            +e('div').header
                +e('span').heading Design
                +e('img')(src="img/sidebar-logo.png").logo
            +b('div').sidebar-form-wrapper
                +b('form').sidebar-form

                    +e('span').form-block-heading Layout
                    +e('label')(for='category') Header
                    +e('select').input-select#category
                        +e('option') Category
                    +e('label')(for='subheader') Subheader
                    +e('select').input-select#subheader
                        +e('option') Status
                    +e('label')(for='item-label') Item label
                    +e('select').input-select#item-label
                        +e('option') Task name

                    +e('span').form-block-heading COLORS
                    +e('label')(for='color') Color by
                    +e('select').input-select#color
                        +e('option') Status